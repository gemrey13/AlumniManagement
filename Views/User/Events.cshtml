<script>
	$(()=>{
        // check
        if(sessionStorage.getItem("logged") == false || sessionStorage.getItem("logged") == undefined){
            location.href ="/"
        }

        $.ajax({
            method:"GET",
            url:"/api/client/getallevents",
            success:res=>{
                console.log(res)
                const container = $(".timeline")
                const eventsTemp = $("#e__item").html()
                res.forEach(item=>{
                    console.log(item)
                    const eventItem = $(eventsTemp).clone()
                    let date = new Date(item.eventDate)
                    let options = { year: 'numeric', month: 'long', day: 'numeric' }
                    let formattedDate = new Intl.DateTimeFormat('en-US', options).format(date)
                    eventItem.find(".timeline-content>p").html(`<b>Event:</b> ${item.eventName}<br><b>When:</b> ${formattedDate}<br><b>Attendees</b>: ${item.attendeesList}<br><b>Description:</b> ${item.eventDescription}`)
                    container.append(eventItem)
                })
            },
            error:err=>{
                console.log(res)
            }
        })

        // Get the credentials
        $(".name").text(`${sessionStorage.getItem("firstName")} ${sessionStorage.getItem("lastName")}`)
        $(".job").text(`${sessionStorage.getItem("currentWork")}`)
    })
</script>